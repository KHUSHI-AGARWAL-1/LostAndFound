<% layout('layouts/boilerpalte') -%> 

<div class="row">

    <div class="col-md-6 mx-auto">
        <div class="display-6 my-5 mx-auto border border-info shadow-lg">
            <h1 class="display-6 mx-5 my-3">Login</h1>
        </div>
    
        <form action="/login" method="POST" class="border border-info shadow-lg">

            <div class="my-3  mx-5">
                <label class="form-label" for="username"> Username: </label>
                <input class="form-control" type="text" name="username" id="username" placeholder="Username">
            </div>

            <!-- LOGIN NOT HAVE EMAIL SECTION -->
            <!-- <div class="mb-3">
                <label class="form-label" for="email"> Email: </label>
                <input class="form-control" type="email" name="email" id="email" placeholder="Email">
            </div> -->

            <div class="my-3 mx-5">
                <label class="form-label" for="password"> Password: </label>
                <input class="form-control" type="password" name="password" id="password" placeholder="Password">
            </div>
            <div class="my-3 mx-5">
                <button type="submit" class="btn btn-sm btn-success ">Login</button>
                <p class="fw-light mt-2"> Not have an account ,<a href="/register">Sign-Up</a> </p>
            </div>
           

        </form>

    </div>

</div>