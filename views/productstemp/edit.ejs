<!-- //same templet as new  -->

<h1 class="mt-5 text-danger text-center">EDIT PAGE</h1>
<div class="row">
    <div class="col-md-6 mx-auto my-3">
                  <!-- //use form for method overide and post request update/patch -->

      <form action="/products/<%=product.id%>?_method=PATCH" method="POST">
          <div class="mb-3">
            <label for="name" class="form-label">NAME:</label>
            <input type="text" class="form-control" id="name" name="name" value="<%=product.name%>">
           
          </div>
          <div class="mb-3">
            <label for="img" class="form-label">IMAGE:</label>
            <input type="text" class="form-control" id="image"  name="img" value="<%=product.img%>">
          </div>
          <div class="mb-3">
              <label class="form-label" for="dec">Description:</label>
              <textarea class="form-control" name="dec" id="dec" rows="5" > <%=product.dec%></textarea>
            </div>
            <!-- <div class="input-group mb-3">
              <label for="price" class="form-label">Status:</label>
              <span class="input-group-text" id="price"></span>
              <input type="text" class="form-control" name="price"  value="<%=product.tag%>">
            </div> -->

            <div class="mb-3">
              <p class="mb-2">Status</p>
              <div class="mx-2">
                  <input class="form-check-input mt-0" type="radio" name="tag" required value="lost" id="lost" aria-label="Radio button for following text input">
                  <label class="form-label" for="lost">Lost</label>
              </div>
              <div class="mx-2">
                  <input class="form-check-input mt-0" type="radio" required name="tag" value="found"  id="found" aria-label="Radio button for following text input">
                  <label class="form-label" for="found">Found</label>
              </div>
          
          <button type="submit" class="btn btn-success">Update</button>
        </form>
    </div>
  </div>
  