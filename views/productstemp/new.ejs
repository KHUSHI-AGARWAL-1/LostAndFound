<% layout('layouts/boilerpalte') -%> 
<nav class="mb-5">
  <%- include('../partials/navebar') -%>
</nav>

<div class="row">
  <div class="col-md-6 mx-auto my-5">
   
    <form action="/products" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label">NAME:</label>
          <input type="text" class="form-control" id="name" name="name" >
        </div>
        <div class="mb-3">
          <label for="img" class="form-label">IMAGE:</label>
          <input type="text" class="form-control" id="image"  name="img">
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email:</label>
          <input type="text" class="form-control" id="email" name="contactemail" >
         
        </div>

        <div class="mb-3">
            <label class="form-label" for="dec">Description:</label>
            <textarea class="form-control" name="dec" id="dec" rows="3"></textarea>
          </div>

          <div class="mb-3">
            <p class="mb-2">Status</p>
            <div class="mx-2">
                <input class="form-check-input mt-0" type="radio" name="tag" required value="lost" id="lost" aria-label="Radio button for following text input">
                <label class="form-label" for="lost">Lost</label>
            </div>
            <div class="mx-2">
                <input class="form-check-input mt-0" type="radio" required name="tag" value="found"  id="found" aria-label="Radio button for following text input">
                <label class="form-label" for="found">Found</label>
            </div>

            <div class="mb-3">
              <label for="phone" class="form-label">Phone :</label>
              <input type="number" class="form-control" id="phone" name="contactphone" >
             
            </div>
           
        </div>

        <button type="submit" class="btn btn-success">Submit</button>
      </form>
  </div>
</div>
